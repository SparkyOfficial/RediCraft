<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- Suppress all checks for generated files -->
    <suppress checks="." files=".*[\\/]generated[\\/].*"/>
    
    <!-- Suppress line length for import statements -->
    <suppress checks="LineLength" files=".*\.java" lines="1-20"/>
    
    <!-- Suppress visibility modifier checks for fields that need to be public -->
    <suppress checks="VisibilityModifier" files=".*Test\.java"/>
</suppressions>